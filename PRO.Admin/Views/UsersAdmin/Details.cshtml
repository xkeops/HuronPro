@model PRO.Admin.Models.ApplicationUser
@{
    ViewBag.Title = "Details";
     //Layout = "~/Views/Shared/AdminLTE/_LTEAdminLayout.cshtml";
}
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@Html.ActionLink("Create New", "Create")</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div>
                        <h4>User</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UserName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.UserName)
                            </dd>
                        </dl>
                    </div>
                    <h4>List of roles for this user</h4>
                    @if (ViewBag.RoleNames.Count == 0)
                    {
                        <hr />
                        <p>No roles found for this user.</p>
                    }
                    <table class="table">
                        @foreach (var item in ViewBag.RoleNames)
                        {
                            <tr>
                                <td>
                                    @item
                                </td>
                            </tr>
                        }
                    </table>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
