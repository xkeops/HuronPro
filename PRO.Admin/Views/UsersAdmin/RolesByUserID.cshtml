@model PRO.Admin.Models.ApplicationUser
@{
    ViewBag.Title = "List Users";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<style>
    body {
        overflow-x: hidden;
        height: 100%;
    }
</style>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <tr>
                            <th>
                                <button id="btnAddRoleToUser" onclick="addRoleToUser('@Model.Id')"><span class="glyphicon glyphicon-plus-sign" title="Add Role to User"></span></button>
                            </th>
                            <th>
                                List of Roles
                            </th>
                        </tr>
                        @foreach (var item in ViewBag.Roles)
                        {
                            <tr>
                                <td style="width:2%;">
                                    <button onclick="if (confirm('Do you want to remove user from role?')) location.href='@Url.Action("RemoveRoleFromUser", "UsersAdmin", new { userid = Model.Id, roleid=item.Id})'"><span class="glyphicon glyphicon-remove"></span></button>
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

<script>

    function addRoleToUser(userid) {
        parent.addRoleToUser(userid);
    }

</script>