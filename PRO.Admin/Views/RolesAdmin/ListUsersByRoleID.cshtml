@model PRO.Admin.Models.ApplicationRole
@{
    ViewBag.Title = "List Users";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<style>

    body {
    overflow-x:hidden;
    height:100%; 
    }

</style>


@Scripts.Render("~/bundles/jquery")

<!-- Add fancyBox -->
<link rel="stylesheet" href="~/jsLib/fancybox/2.1.5/source/jquery.fancybox.css?v=2.1.5" type="text/css" media="screen" />
<script type="text/javascript" src="~/jsLib/fancybox/2.1.5/source/jquery.fancybox.pack.js?v=2.1.5"></script>



<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <button id="btnAddUserToRole" onclick="addToRole('@Model.Id')"><span class="glyphicon glyphicon-plus-sign" title="Add User to Role"></span></button>
                                </th>
                                <th>
                                    List of Users
                                </th>
                                @*Add a table header for the Address info:*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Users)
                            {
                                <tr>
                                    <td style="width:2%;">
                                        <button onclick="if (confirm('Do you want to remove user from role?')) location.href='@Url.Action("RemoveUserFromRole", "RolesAdmin", new { userid = item.Id, roleid=Model.Id})'" title="Remove Role from User"><span class="glyphicon glyphicon-remove"></span></button>
                                    </td>
                                    <td>
                                        @item.UserName
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->


<script>

    function addToRole(roleID) {
        parent.addToRole(roleID);
    }

</script>